server {
    listen 80;
    server_name {{item.domain_name}}.propentatech.com;  # Remplacez par votre nom de domaine ou adresse IP

    location / {
        root /var/www/{{item.domain_name}};
        index index.html;
    }

    # Proxy configuration (si vous avez un backend Ã  proxy)
    location /api/ {
        proxy_pass http://127.0.0.1:5000;  # Remplacez par l'adresse de votre backend
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
